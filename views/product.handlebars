{{!-- header --}}


<header class="d-flex  align-content-center">
    <div class="logo">Logo</div>
    <nav class="position-relative">
        <ul class="d-flex justify-content-center align-content-center">
            {{#each catData as | catItems|}}
            <li><a href="/category/{{catItems.slug}}">{{catItems.category_name}}</a>
            </li>
            {{/each}}
        </ul>
    </nav>
 
    <div class="cart text-end serch-input"> <input type="search" placeholder="search here..." id="searchProductCat"/>
        </i></div>
</header>

{{!-- Body --}}
<div class="row mt-5">
    <div class="col-md-3">
        <div class="list-items">
            <div class="list-itme-list">
                <h3>Categories</h3>
                <ul>
                    {{#each catData as | catItems|}}


                    <li><a href="/category/{{catItems.slug}}">{{catItems.category_name}}</a>
                        <div class="catlistitems">
                            {{#each catItems.subCategories as | subcat | }}

                            {{!-- <h3>{{subcat.sub_category_name}}</h3> --}}

                            <h3><a
                                    href="/category/sub-category/{{catItems.slug}}/{{subcat.slug}}">{{subcat.sub_category_name}}</a>
                            </h3>

                            {{/each}}

                        </div>


                    </li>
                    {{/each}}
                </ul>
            </div>
            <div class="list-itme-list">
                <h3>Filter By price</h3>
                <span id="fprice"></span>
                <input type="range" min="15" max="200" id="price-filter" >
            </div>

        </div>
    </div>
    <div class="col-md-9">
        <div class="row" id="productSearchItems">
            {{#each productList as | proItems |}}
            <div class="col-md-4">
                <div class="product-list-items">
                    <div class="card" style="width: 18rem;">
                        <a href="/product/{{proItems.slug}}">
                            <img class="card-img-top productImage" src={{proItems.product_image_path}}
                                alt="Card image cap">
                        </a>

                        <div class="card-body">
                            <h5 class="card-title prodcut-title">{{proItems.product_name}}</h5>
                            <p class="card-text product-price">Price:{{proItems.price}}</p>

                        </div>
                    </div>

                </div>
            </div>
            {{/each}}
        </div>

    </div>
</div>


<script src="/js/product.js"></script>