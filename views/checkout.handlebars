<div class="checkout-details container-fluid py-5">
    <div class="container">
        <table class="table">
            <thead>
                <tr>

                    <th scope="col">Sr.No</th>
                    <th scope="col">Product image</th>
                    <th scope="col">Product name</th>
                    <th scope="col">Quantity</th>

                    <th>Price</th>
                    <th scope="col">Total</th>
                    <th>Delete</th>
                </tr>
            </thead>

            <tbody>
                {{#if cart}}

                {{#each cart.cart as | cartItems |}}
                <tr>
                    <th scope="row">{{cartItems.pid}}</th>
                    <td><img src='{{cartItems.productImage}}' width="40px" /></td>
                    <td>{{cartItems.productNamme}}</td>
                    <td>{{cartItems.qty}}</td>
                    <td>{{cartItems.price}}</td>
                    <td><button><a href="/cart/delete-cart/{{cartItems.pid}}">Delete</a></button></td>
                </tr>
                {{/each}}
                {{else}}
                <tr>
                    <td class="text-center" colspan="6">No More Data</td>
                </tr>
                {{/if}}
            </tbody>
        </table>

        <div id="ship-pay">
            <h1>Shipping Details</h1><br>
            <form id="shipping-form">
                <label for="full-name">Full Name:</label>
                <input type="text" id="full-name" name="full-name" required><br><br>

                <label for="address">Address:</label>
                <input type="text" id="address" name="address" required><br><br>

                <label for="city">City:</label>
                <input type="text" id="city" name="city" required><br><br>

                <label for="state">State:</label>
                <input type="text" id="state" name="state" required><br><br>

                <label for="zip-code">Zip Code:</label>
                <input type="text" id="zip-code" name="zip-code" required><br><br>
            </form>

            <h1>Payment Details</h1><br>
            <form id="payment-form">
                <label for="card-number">Card Number:</label>
                <input type="text" id="card-number"><br><br>

                <label for="card-holder">Cardholder Name:</label>
                <input type="text" id="card-holder"><br><br>

                <label for="expiry-date">Expiry Date (MM/YY):</label>
                <input type="text" id="expiry-date"><br><br>

                <label for="ccv">CCV:</label>
                <input type="text" id="cvv"><br><br>
            </form>
        </div>

        <div class="success">
            <a href="/success" title="checkoutTrue"> <button class="btn-primary btn-lg">CONFIRM PAYMENT</button></a>
        </div>
        <div class="btn go-back">
            <button class="btn-primary btn-outline-secondary btn-lg" id="goBackButton">Go Back</button>
        </div>
    </div>
</div>